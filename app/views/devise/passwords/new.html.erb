<div class="card col-sm-12 col-lg-8 mx-auto mt-5">
  <h2 style="text-align:center;" class="mt-3">パスワードを忘れた場合</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div style="text-align:center;" class="mt-2 field">
      <%= f.label :メール %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
   
    <div style="text-align:center;" class="mt-4 actions">
      <%= f.submit "パスワード変更の手続きを送る。" %>
    </div><br>
  <% end %>

  <%= render "devise/shared/links" %>
  <br>
</div>