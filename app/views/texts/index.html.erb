<p id="notice"><%= notice %></p>

<h1>Texts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Post</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @texts.each do |text| %>
      <tr>
        <td><%= text.content %></td>
        <td><%= text.user_id %></td>
        <td><%= text.post_id %></td>
        <td><%= text.name %></td>
        <td><%= link_to '詳細', text %></td>
        <td><%= link_to '編集', edit_text_path(text) %></td>
        <td><%= link_to '削除', text, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

