<% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
  <!-- ユーザーがログインしていた時の処理 -->
    <span class="mt-4" style="float:right"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-danger text-white border-danger' %></span><br><br>
    <hr class="mt-0" style="height:4px; background-color:#49b99e; border:none;">
    <br><br><br><br>
    <div>
      <h1 style="text-align:center;"> メールアドレス： <span style="color:#49b99e"><%= current_user.email %></span> さんがログインしています。</h1><br>
      <div style="text-align:center;">
        <%= link_to 'プロフィール作成', new_profile_path, class: 'btn btn-light border-primary text-primary font-weight-bold' %>
        <%= link_to 'プロフィール一覧', profiles_path, class: 'btn btn-light border-primary text-primary font-weight-bold' %>
      </div>
    </div>
<% else %>
    <!-- ユーザーがログインしていなかった時の処理 -->
    <br><br><br><br><br><br><br><br>
    <h2 style="text-align:center;"> 現在ログインしていません。 </h2><br>
    <div style="text-align:center;">
      <%= link_to "ログイン", new_user_session_path, class: 'post btn btn-light border-primary text-primary font-weight-bold' %> <!-- ログイン画面に移行する -->
      <%= link_to "新規登録", new_user_registration_path, class: 'post btn btn-light border-primary text-primary font-weight-bold' %> <!-- 新規登録画面に移行する -->
    </div>
<% end %>